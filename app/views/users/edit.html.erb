<div class="error" style="color:red; font-size:20px;margin:10px;">
<% if @user.errors.any? %>
<p class="error_title" style="font-size:30px;"><%= @user.errors.count %>errors prohibited this obj from being saved:</p>
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
<% end %>
</div>
<main>
<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">


<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>

  <div class="form-group" style="margin-bottom:20px;">
  <label for="user_name">Name</label>
  <div>
    <%=f.text_field:name,autofocus: true,id:"user_name", placeholder:"name",class:"form-control"%>
  </div>
  </div>

  <div class="form-group" style="margin-bottom:20px;">
  <label for="inputImage">Image</label>
   <div>
     <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
  </div>
  <div>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>
  </div>

  <div class="form-group">
  <label>Introduction</label>
  <div>
    <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Please introduce yourself",class:"form-control"%>
  </div>
  </div>

  <div class="action" style="margin-top:10px;">
  <%= f.submit " Update User " ,class: 'btn btn-secondary'%>
  <% end %></div>


</div>
</div>
</div>
</main>